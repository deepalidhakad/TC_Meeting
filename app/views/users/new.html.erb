<br><br><center><div class="card" style="width: 18rem;" >
<div class="card-body">
<center><h1>Add Employee</h1>
<%= form_for @user do |f|%>  
<%= f.label :username%><br>  
<%= f.text_field :username%><br> 
<%= f.label :email%><br>  
<%= f.email_field :email%><br>
<%= f.label :Role%><br> 
<%= f.select :role, ['Empolyee', 'HR']%><br>
<%= f.label :password%><br> 
<%= f.password_field :password%><br><br>
<%= f.submit  "SignUp" , class:"btn btn-outline-primary"%><%end%><br>
<%= link_to "Back to users", root_path , class:"btn btn-outline-success"%>
</div>
</div>
</center>