<br><br><center><div class="card" style="width: 18rem;" >
<div class="card-body">
<center><h1>Sign Up</h1>
<%= form_for @user do |f|%>  
<%= f.label :username%><br>  
<%= f.text_field :username%><br> 
<%= f.label :email%><br>  
<%= f.email_field :email%><br>
<%= f.label :Role%><br> 
<%= f.select :role, ['Empolyee', 'HR']%><br>
<%= f.label :password%><br> 
<%= f.password_field :password%><br><br>
<%= f.submit  "SignUp" , class:"btn btn-outline-primary"%><%end%>
<p><%= button_to "Login", '/login', method: :get, class:"btn btn-outline-success"%><br></p>
</div>
</div>
</center>