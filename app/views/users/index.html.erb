<h1 style=" color: white;">All Users:-</h1>

<div class="row">
  <% @users.each do |user| %>
  <div class="col-sm-4">
     <div class="card navbar-light bg-light"  style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQUHfjWn2Sa5jFNRnlbskEQdXyN1tRhH1dpdQ&usqp=CAU); background-repeat: no-repeat; background-size: cover;">
      <div class="card-body">
        <p><b> User Name: </b><%= user.username %></p> 
        <p><b> Email: </b><%= user.email %></p> 
        <p><b> Phone: </b><%= user.phone %></p> 
        <p><b> Address: </b><%= user.address %></p> 
        <p><b>Img:</b><br><%= image_tag user.image, :size => "100x100" if user.image.attached? %></p>
        <% if current_user.role == "HR" %>
        <%= link_to "Edit User", edit_user_path(user) %> |
        <%= button_to "Delete User", user, method: :delete , class:"btn btn-outline-danger"%>
        <% end %>
      </div>
    </div><br>
  </div>
 <% end %>
</div><br>
<%= link_to "Back to users", root_path , class:"btn btn-success"%>

