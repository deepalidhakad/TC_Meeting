<h1 style=" color: white;">Edit Details:-</h1>

<%= form_with model: @user do |f|%>  
<div style=" color: white;">
<%= f.label :email%><br>
<%= f.email_field :email%>
</div>
<div style=" color: white;"><br> 
<%= f.label :phone%><br>  
<%= f.number_field :phone%>
</div>
<div style=" color: white;"><br> 
<%= f.label :address%><br>  
<%= f.text_field :address%>
</div>
<div style=" color: white;"><br> 
<%= f.label :image%><br> 
<%= f.file_field :image%>
</div>
<div style=" color: white;"><br><br>
<%= f.submit  "Save" %>
<%end%>
</div>
<br>

<div>
  <%= link_to "Back to users", users_path, class:"btn btn-success" %>
</div>
