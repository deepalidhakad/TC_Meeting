<center><h1 style=" color: white;">All Rooms:-</h1></center>
<div class="row">
  <% @rooms.each do |room| %>
   <div class="col-sm-6" >
     <div class="card navbar-light bg-light"  style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQUHfjWn2Sa5jFNRnlbskEQdXyN1tRhH1dpdQ&usqp=CAU); background-repeat: no-repeat; background-size: cover;">
       <div class="card-body" >
        <b>Room Name:-</b> <%= room.room_name %></p>
        <b>Room Capacity:-</b> <%= room.capacity %></p>
         <% if current_user.role == "HR" %>
         <%= link_to "Edit Room", edit_room_path(room) %> |
         <%= button_to "Delete User", room, method: :delete , class:"btn btn-outline-danger"%>
         <% end %>
       </div>
     </div> <br>
   </div> 
   <% end %>  
</div>
<br>
<% if current_user.role == "HR" %>
<%= link_to "Add Room", new_room_path , class:"btn btn-success"%> | <% end %>
<%= link_to "Back to users", root_path , class:"btn btn-success"%>
